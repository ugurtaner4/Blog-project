@model MVCBlog.Areas.Admin.Models.DTO.CategoryVM
<div class="box box-primary">
    <div class="box-header with-border">

    </div>

    @using (Html.BeginForm())
    {
        <div class="box-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Description)
                @Html.TextAreaFor(x => x.Description, new { @class = "form-control", @placeholder = "Description" })
            </div>

        </div>

                    <div class="box-footer">
                        <button type="submit" class="btn btn-primary">Kayıt</button>
                    </div>
    }

</div>