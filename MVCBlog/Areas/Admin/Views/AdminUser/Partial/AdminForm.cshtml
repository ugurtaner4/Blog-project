@model MVCBlog.Areas.Admin.Models.DTO.AdminUserVM
<div class="box box-primary">
    <div class="box-header with-border">

    </div>

    @using (Html.BeginForm())
    {
        <div class="box-body">
            <div class="form-group">
                @Html.LabelFor(x => x.Name)
                @Html.TextBoxFor(x => x.Name, new { @class = "form-control", @placeholder = "Name" })
                @Html.ValidationMessageFor(x => x.Name)
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.SurName)
                @Html.TextBoxFor(x => x.SurName, new { @class = "form-control", @placeholder = "Surname" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Email)
                @Html.TextBoxFor(x => x.Email, new { @class = "form-control", @placeholder = "Email" })
            </div>
            <div class="form-group">
                @Html.LabelFor(x => x.Password)
                @Html.TextBoxFor(x => x.Password, new { @class = "form-control", @placeholder = "Password" })
            </div>

        </div>

        <div class="box-footer">
            <button type="submit" class="btn btn-primary">Kayıt</button>
        </div>
    }

</div>
